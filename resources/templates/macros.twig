{% macro color(value) %}{% spaceless %}
        {{ value is defined ? (value == 0 ? 'danger' : (value < 0.7 ? 'warning' : 'success')) : 'default' }}
{% endspaceless %}{% endmacro %}

{% macro labelify(value) %}
    {% set class = value is defined ? (value == 0 ? 'danger' : (value < 0.7 ? 'warning' : 'success')) : 'default' %}

    <span class="label label-{{ class }}">{{ value|round(2) * 100 }}%</span>
{% endmacro %}

{% macro navigation(class, method, coverage, without) %}
    <div class="btn-group">
        {% if without != 'line' %}
            {% set color = coverage.lines is defined ? (coverage.lines == 0 ? 'danger' : (coverage.lines < 0.7 ? 'warning' : 'success')) : 'default' %}
            <a href="./{{ class|replace({'\\': '-'}) }}.html#{{ method }}" class="btn btn-sm btn-{{ color }}" title="Show lines coverage"><i class="fa fa-align-justify"></i></a>
        {% endif %}

        {% if without != 'branches' %}
            {% set color = coverage.branches is defined ? (coverage.branches == 0 ? 'danger' : (coverage.branches < 0.7 ? 'warning' : 'success')) : 'default' %}
            <a href="./{{ class|replace({'\\': '-'}) }}-branch.html#{{ method }}" class="btn btn-sm btn-{{ color }}" title="Show branches coverage"><i class="fa fa-code-fork"></i></a>
        {% endif %}

        {% if without != 'paths' %}
            {% set color = coverage.paths is defined ? (coverage.paths == 0 ? 'danger' : (coverage.paths < 0.7 ? 'warning' : 'success')) : 'default' %}
            <a href="./{{ class|replace({'\\': '-'}) }}-path.html#{{ method }}" class="btn btn-sm btn-{{ color }}" title="Show paths coverage"><i class="fa fa-road"></i></a>
        {% endif %}
    </div>
{% endmacro %}
